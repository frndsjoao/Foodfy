{% extends 'layout.njk' %}

{% block content %}

    <div class="description-bg">
        <div class="description">
            <section id="description-text">
                <h1>{{ index.title }}</h1>
                <p>{{ index.subtitle }} 
                </p>
            </section>        
            <img src="{{ index.image }}" alt="Chef">
        </div>
    </div>

    <div id="content">
        <h2>Mais acessadas</h2>
    </div>

    <section class="cards">
        <div class="card" id="asinhas">
            <div class="card_img">
                <img src="asinhas.png" alt="Receita">
            </div>
            <div class="card_title">
                <p>Asinhas de Frango ao barbecue</p>
            </div>
            <div class="card_info">
                <p>por Vania Steroski</p>
            </div>

        </div>

        <div class="card" id="burger">
            <div class="card_img">
                <img src="burger.png" alt="Receita">
            </div>
            <div class="card_title">
                <p>Triplo bacon burger</p>
            </div>
            <div class="card_info">
                <p>por Jorge Relato</p>
            </div>

        </div>

        <div class="card" id="doce">
            <div class="card_img">
                <img src="doce.png" alt="Receita">
            </div>
            <div class="card_title">
                <p>Docinhos pão-do-céu</p>
            </div>
            <div class="card_info">
                <p>por Ricardo Gouvea</p>
            </div>

        </div>

        <div class="card" id="espaguete">
            <div class="card_img">
                <img src="espaguete.png" alt="Receita">
            </div>
            <div class="card_title">
                <p>Espaguete ao alho</p>
            </div>
            <div class="card_info">
                <p>por Júlia Kinoto</p>
            </div>

        </div>

        <div class="card" id="lasanha">
            <div class="card_img">
                <img src="lasanha.png" alt="Receita">
            </div>
            <div class="card_title">
                <p>Lasanha mac'n' cheese</p>
            </div>
            <div class="card_info">
                <p>por Juliano Vieira</p>
            </div>

        </div>

        <div class="card" id="pizza">
            <div class="card_img">
                <img src="pizza.png" alt="Receita">
            </div>
            <div class="card_title">
                <p>Pizza 4 estações</p>
            </div>
            <div class="card_info">
                <p>por Fabiana Melo</p>
            </div>
        </div>
    </section>

{% endblock %}