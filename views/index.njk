{% extends 'layout.njk' %}

{% block content %}

    <div class="description">
        <section id="description-content">
            <h1>{{ index.title }}</h1>
            <p>{{ index.subtitle }} 
            </p>
        </section>        
        <img src="{{ index.image }}" alt="Chef">
    </div>

    <h2 class="title">Mais acessadas</h2>

    <section class="cards">
        {% for item in items %}
        <div class="card">
            <div class="card_img">
                <img src={{item.avatar}} alt="Receita">
            </div>
            <div class="card_title">
                <p>{{item.title}}</p>
            </div>
            <div class="card_info">
                <p>por {{item.author}}</p>
            </div>
        </div>
        {% endfor %}
    </section>
    
<script src="/scripts.js"></script>
{% endblock %}