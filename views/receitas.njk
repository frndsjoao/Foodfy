{% extends 'layout.njk' %}

{% block head %}
    <title>Foodfy - Receitas</title>
{% endblock %}

{% block content %}
        
    <div id="content"><h2> </h2></div>
    
    <section class="cards">
        {% for item in items %}
        <div class="card">
            <div class="card_img">
                <img src={{item.avatar}} alt="Receita">
            </div>
            <div class="card_title">
                <p>{{item.title}}</p>
            </div>
            <div class="card_info">
                <p>por {{item.author}}</p>
            </div>
        </div>
        {% endfor %}

    </section>

<script src="/scripts.js"></script>

{% endblock %}
