<div class="item">
    <div class="title">Imagem da receita</div>
    <div class="box-images-recipe">
        <div class="photos-upload">
            <input type="file" name="photos"
            id="photos-input" multiple accept="image/*"
            onchange="PhotosUpload.apply('handleFileInputRecipes', event)">
            <i class="material-icons">add</i>
        </div>
        <div class="photos-preview">
            {% if files %}
            {% for file in files %}
                <div class="photo" id="{{file.id}}">
                    <img src="{{file.src}}" alt="{{file.name}}">
                    <i class="material-icons" onclick="PhotosUpload.removePhoto(event)">close</i>
                </div>
            {% endfor %}
                <input type="hidden" name="removed_files">
            {% endif %}
        </div>
    </div>
</div>

<div class="item">
    <div class="title">Nome da receita</div>
    <input type="text" name="title" value ="{{recipe.title}}" required>
</div>

<div class="item">
    <div class="title">Chef</div>
    <select name="chef">
        {% for chef in chefOptions %}
            <option value="{{chef.id}}" 
            {%if recipe.chef_id == chef.id%} selected {%endif%}>{{chef.name}}
            </option>
        {% endfor %}
    </select>
</div>

<div class="item">
    <div class="title">Ingredientes</div>
    <div id="ingredients">
        {% if recipe.ingredients %}
        {% for ingredient in recipe.ingredients %}
            <div class="ingredient">
                <input type="text" name="ingredients[]" value="{{ingredient}}">
            </div>
        {% endfor %}
        {% else %}
            <div class="ingredient">
                <input type="text" name="ingredients[]" value="{{recipe.ingredients}}">
            </div>
        {% endif %}
    </div>
    <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>
</div>

<div class="item">
    <div class="title">Modo de preparo</div>
    <div id="preparation">
        {% if recipe.preparation %}
        {% for preparation in recipe.preparation %}
            <div class="preparation">
                <input type="text" name="preparation[]" value="{{preparation}}">
            </div>
        {% endfor %}
        {% else %}
            <div class="preparation">
                <input type="text" name="preparation[]" value="{{recipe.preparation}}">
            </div>
        {% endif %}
    </div>
    <button type="button" class="add-preparation">Adicionar novo passo</button>
</div>

<div class="item">
    <div class="title">Informações adicionais</div>
    <textarea name="information">{{recipe.information}}</textarea>
</div>