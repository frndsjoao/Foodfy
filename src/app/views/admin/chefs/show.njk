{% extends "admin/layout.njk" %}

{% block head %}
    <title>Admin Foodfy - {{chef.name}}</title>
{% endblock %}

{% block content %}

    <div class="admin-title__show">
        <h2 id="page-title__cards">Chef: {{chef.name}}</h2>
        <a href="/admin/chefs/{{chef.id}}/edit">Editar Chef</a>
    </div>

    <div class="recipe-title" id="{{chef.id}}">
        <img id="chef-image" src="{{chef.avatar_url}}">
        <h1>{{chef.name}}</h1>
        <p> {{recipes.total_recipes}} receitas</p>
    </div>

    <section class="recipe-content">
        <h3>Receitas</h3>
        <div class="recipe-info">
            
        <section class="admin__cards">
        {% for recipe in recipes %}

            <div class="admin__card" id="{{recipe.id}}">
                <div class="admin-card_img">
                    <img src={{recipe.image}} alt="Receita">
                </div>
                <section>
                    <div class="admin-card_title">
                        <p>{{recipe.title}}</p>
                    </div>
                    <div class="admin-card_author">
                        <p>por {{chef.name}}</p>
                    </div>
                    
                    <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                </section>
            </div>

        {% endfor %}
        </section>

        </div>

    </section>


{% endblock %}