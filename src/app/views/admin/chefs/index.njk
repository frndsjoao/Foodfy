{% extends 'admin/layout.njk' %}

{% block head %}
    <title>Admin Foodfy - Chefs</title>
{% endblock %}

{% block content %}

    <div class="admin-title__show">
        <h2 id="page-title__cards">Gerenciar chefs</h2>
        <a href="/admin/chefs/create">Cadastrar chef</a>
    </div>

    <section class="chef__cards">
        {% for chef in chefs %}

        <div class="chef__card" id="{{loop.index -1}}">
            <div class="chef-card_img">
                <img src={{chef.avatar_url}}>
            </div>
            <section>
                <div class="chef-card_title">
                    <p>{{chef.name}}</p>
                </div>
                
                <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
            </section>
        </div>

        {% endfor %}
    </section>

{% endblock %}
