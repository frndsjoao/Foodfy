{% extends 'admin/layout.njk' %}

{% block head %}
    <title>Admin Foodfy - Chefs</title>
{% endblock %}

{% block content %}

<main>
    <section id="box">
        <div class="wrapper">
            <h3>Gerenciar chefs</h3>
            <a href="/admin/chefs/create"><button class="new-chef">Novo chef</button></a>
        </div>

        <main class="chefs">
            {% for chef in chefs %}
                <div class="chef">
                    <div class="chef-avatar">
                        <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
                    </div>
                    <div class="chef-info">
                        <h5>{{chef.name}}</h5>
                        <a href="/admin/chefs/{{chef.id}}" class="view">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </main>

        <div class="pagination"
            data-page = {{pagination.page}}
            data-total = {{pagination.total}}
            data-limit = {{pagination.limit}}>
        </div>

    </section>
</main>

{% endblock %}