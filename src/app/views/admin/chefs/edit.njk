{% extends "admin/layout.njk" %}

{% block head %}
    <title>Admin Foodfy - New chef</title>
{% endblock %}

{% block content %}


      <div class="admin-title__show" id="edit">
          <h2 id="page-title__cards">Editando chef</h2>
          
          <form id="form-delete" action="/admin/chefs?_method=DELETE" method="POST">
                <input type="hidden" name="id" value="{{chef.id}}">
                <button class="delete-btn" type="delete" onclick="confirmation()">Deletar</button>
            </form>
          
        <form action="/admin/chefs?_method=PUT" method="POST">
          <button type="submit">Salvar chef</button>
      </div>

      <section class="form-details">
      
        <input type="hidden" name="id" value="{{ chef.id }}">
        {% include 'admin/chefs/chefs-fields.njk' %}
      
      </section>
    </form>


{% endblock %}