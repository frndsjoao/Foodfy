{% extends '../layout.njk' %}

{% block head %}
    <title>Foodfy - Chefs</title>
{% endblock %}

{% block content %}

    <main class="chefs">
        {%for chef in chefs %}
            <div class="chef">
                <div class="chef-avatar">
                    <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
                </div>
                <div class="chef-info">
                    <a href="/chefs/{{chef.id}}"><h4>{{chef.name}}</h4></a>
                    {% if chef.total_recipes > 1 %}
                        <p>{{chef.total_recipes}} receitas</p>
                    {% else %} {% if chef.total_recipes == 0 %}
                        <p>Sem receitas</p>
                    {% else %}
                        <p>{{chef.total_recipes}} receita</p>
                    {% endif %}
                    {% endif %}
                </div>
            </div>
        {% endfor %}

        <div class="pagination"
            data-page = {{pagination.page}}
            data-total = {{pagination.total}}
            data-limit = {{pagination.limit}}>
        </div>
        
    </main>
{% endblock %}