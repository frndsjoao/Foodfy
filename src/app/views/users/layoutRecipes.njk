<div class="recipes">
    {%for recipe in recipes%}
        <section class="card">
            {% for file in files %}
                {% if recipe.id == file.recipe_id %}
                    <a href="/receitas/{{recipe.id}}"><img src="{{file.src}}" alt="{{file.name}}"></a>
                {% endif %}
            {% endfor %}
            <h4>{{recipe.title}}</h4>
            <p>por {{recipe.chef_name}}</p>
        </section>
    {% endfor %}
</div>